function my_print () {

    targs = totalarguments();
    if (targs < 0 or targs > 20) {
        print("ERROR in my_print: arguments reported: ", targs, "\n");
        return nil;
    }

    for (i = 0; i < totalarguments(); ++i) {
        print(argument(i));
    }
}

