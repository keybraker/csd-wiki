function foo() {
    function lala() {
        function prnt() {
            local t = [ ::t, 2, 3.14, "4", true, false ];
            print("Table t in prnt is: ", t, "\n");
        }
        print("Function prnt printing: ", prnt, " and print: ", print, "\n");
        prnt();
    }
    return lala;
}

f = foo();
